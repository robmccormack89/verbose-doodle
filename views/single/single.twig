{% extends "base.twig" %}

{% block styles %}
  <style>
    /* single post comments */
    .uk-comment-list .uk-comment~ul {
      padding-left: 0.875rem;
    }
    .uk-comment-primary {
      padding: 30px 0 0 0;
      background-color: transparent;
    }
    .uk-comment-list .uk-comment~ul {
      margin: 20px 0 0;
    }
    .uk-comment-list>:nth-child(n+2) {
      margin-top: 20px;
    }
    @media only screen and (min-width:980px) {
      .uk-comment-list .uk-comment~ul {
        padding-left: 1.75em;
      }
    }
    /* dropcap */
    .uk-dropcap:first-letter, .uk-dropcap>p:first-of-type:first-letter {
      display: block;
      margin-right: 10px;
      margin-top: -10px;
      float: left;
      font-size: 4.8em;
      line-height: 1;
      margin-bottom: -2px;
    }
  </style>
{% endblock %}

{% block content %}
  <div id="Single{{post.id|e('html_attr')}}" class="post-type-{{post.post_type|e('html_attr')}} {{post.class|e('esc_html')}} uk-section uk-container" data-template="single.twig">
    <div class="uk-grid-large" uk-grid>

      <section class="left-section uk-width-2-3@m">
        <article class="uk-article">
          
          {% block single_headr %}
            <header class="article-header">
            
              {% block single_title %}
                <h1 class="uk-article-title uk-margin-small-bottom">
                  {{ post.title|e('esc_html') }}
                </h1>
              {% endblock %}
              
              {% block single_header_meta %}
                <p class="uk-article-meta uk-margin-small-top uk-margin-small-bottom">
                  {{ post.terms( {query:{taxonomy:'category', orderby:'name', order: 'ASC', parent: 0, childless: 0, child_of: 0}} )|join(', ')|e('esc_html') }}. 
                  {{ fn('human_time_diff', fn('get_the_time', 'U'), fn('current_time', 'timestamp'))|e('esc_html') ~ ' ' ~ __('ago', 'verbose-doodle')}}.
                </p>
              {% endblock %}
              
              {% block single_thumb %}
                {% if post.thumbnail %}
                  <figure class="uk-margin-small-top">
                    <img class="theme-border" data-src="{{ post.thumbnail.src|resize(800, 400)|e('esc_url') }}" width="800" height="400" alt="{{ post.thumbnail.alt|e('html_attr') }}" uk-img>
                    {% if post.thumbnail.caption %}
                      <figcaption class="uk-text-muted uk-text-center">{{ post.thumbnail.caption|e('esc_html') }}</figcaption>
                    {% endif %}
                  </figure>
                {% endif %}
              {% endblock %}
            
            </header>
          {% endblock %}

          {% block single_content %}
            <div class="article-content uk-margin-medium-bottom">
              
              {% block single_lead %}
                {% if fn('has_excerpt') %}
                  <p class="uk-text-lead uk-dropcap uk-margin-remove" hidden>{{ post.preview.read_more('')|e('esc_html') }}</p>
                {% endif %}
              {% endblock %}
              
              {# post.content|e('wp_kses_post') #}
              {% include 'sample-content.twig' %}

            </div>
          {% endblock %}
          
          {% block single_footr %}
            <footer class="article-footer">
            
              {% block single_footr_meta %}
                <p class="uk-article-meta uk-margin-remove-top uk-margin-medium-bottom">
                  {{ __('Posted in:', 'ned-murphy-tractors-theme') }}
                  {% for category in post.categories %}
                    {% if not loop.last %}
                      <a title="{{ category|e('html_attr') }}" href="{{ category.link|e('esc_url') }}">{{ category|e('esc_html') }}</a>,
                    {% else %}
                      <a title="{{ category|e('html_attr') }}" href="{{ category.link|e('esc_url') }}">{{ category|e('esc_html') }}</a>.
                    {% endif %}
                  {% endfor %}
                </p>
              {% endblock %}
              
              {% block single_comments %}
                {% if function('comments_open') %}
                  <div class="article-comments uk-margin-medium-bottom">
                    {% include "comments.twig" %}
                  </div>
                {% endif %}
              {% endblock %}
              
              {% block single_pagi %}
                <div class="article-pagination uk-child-width-1-2" uk-grid>
                
                  <div class="prev-article uk-text-left">
                    {% if post.next %}
                      <a href="{{ post.next.link|e('esc_url') }}" class="uk-link-reset">
                        <div class="uk-text-emphasis uk-text-bold"><i class="fas fa-arrow-left"></i> {{ __('Previous Article', 'verbose-doodle') }}</div>
                        <div class="uk-text-italic uk-width-large uk-visible@m">{{ post.next.title|e('esc_html') }}</div>
                      </a>
                    {% endif %}
                  </div>
                  
                  <div class="next-article uk-text-right">
                    {% if post.prev %}
                      <a href="{{ post.prev.link|e('esc_url') }}" class="uk-link-reset">
                        <div class="uk-text-emphasis uk-text-bold">{{ __('Next Article', 'verbose-doodle') }} <i class="fas fa-arrow-right"></i></div>
                        <div class="uk-text-italic uk-width-large uk-visible@m">{{ post.prev.title|e('esc_html') }}</div>
                      </a>
                    {% endif %}
                  </div>
              
                </div>
              {% endblock %}
            
            </footer>
          {% endblock %}

        </article>
      </section>
      
      {% include 'sidebar.twig' %}
    
    </div>
    
  </div>
{% endblock %}