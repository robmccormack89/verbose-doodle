<div id="post-{{post.id|e('html_attr')}}" class="uk-card uk-card-body uk-card-small uk-flex uk-flex-middle theme-border {{ post.class|e('html_attr') }}">
  <div class="uk-grid uk-grid-medium uk-flex uk-flex-middle" uk-grid>
    <div class="uk-width-1-3@s uk-width-2-5@m uk-height-1-1">
      <a class="uk-link-reset uk-text-bold" href="{{post.link|e('esc_url')}}">
        <img class="tease-feature-related theme-border" data-src="{{ post.thumbnail.src|resize(600, 600)|e('esc_url')|default('https://via.placeholder.com/600x600.png') }}" alt="{{ post.thumbnail.alt|e('html_attr') }}" data-width data-height uk-img>
      </a>
    </div>
    <div class="uk-width-2-3@s uk-width-3-5@m">  
      {% if function('is_sticky', post.id) %}
        <span class="uk-label home-featured-label">{{ __('Featured Article', 'verbose-doodle') }}</span>
      {% endif %}
      <h3 class="uk-card-title uk-margin-small-top uk-margin-remove-bottom">
        <a class="uk-link-reset uk-text-bold" href="{{post.link|e('esc_url')}}">{{post.title|e('esc_html')}}</a>
      </h3>
      <span class="uk-article-meta">
        {{ __('Published on', 'verbose-doodle') }} {{post.date | date|e('esc_html')}}. 
        {{ __('Posted in', 'verbose-doodle') }} {{ post.terms( {query:{taxonomy:'category', orderby:'name', order: 'ASC', parent: 0, childless: 0, child_of: 0}} )|join(', ')|e('esc_html') }}.
      </span>
    </div>
  </div>
</div>