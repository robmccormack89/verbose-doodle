<article id="post-{{post.id|e('html_attr')}}" class="tease-post-list uk-section uk-section-small uk-padding-remove-top item {{ post.class|e('html_attr') }}" data-template="tease.twig">
  <header>
    <h2 class="uk-margin-remove-adjacent uk-margin-small-top uk-text-bold uk-margin-small-bottom"><a class="uk-link-reset" href="{{post.link|e('esc_url')}}">{{post.title|e('esc_html')}}</a></h2>
    <p class="uk-article-meta uk-margin-small-bottom">
      {{ post.terms( {query:{taxonomy:'category', orderby:'name', order: 'ASC', parent: 0, childless: 0, child_of: 0}} )|join(', ')|e('esc_html') }} | 
      {{ fn('human_time_diff', fn('get_the_time', 'U'), fn('current_time', 'timestamp'))|e('esc_html') ~ ' ' ~ __('ago', 'verbose-doodle')}}
    </p>
  </header>
  {% if post.get_thumbnail %}
    <figure class="uk-position-relatve uk-inline uk-margin-remove">
      <a href="{{post.link|e('esc_url')}}">
        <img class="theme-border" data-src="{{ post.thumbnail.src|resize(800, 300)|e('esc_url') }}" width="800" height="300" alt="{{ post.thumbnail.alt|e('html_attr') }}" uk-img>
        {% if function('is_sticky', post.id) %}
          <span class="uk-label featured-label uk-position-top-left">{{ __('Featured Article', 'verbose-doodle') }}</span>
        {% endif %}
      </a>
      {% if post.thumbnail.caption %}
        <figcaption class="uk-padding-small uk-text-muted uk-text-center tease-image-caption">{{ post.thumbnail.caption|e('esc_html') }}</figcaption>
      {% endif %}
    </figure>
  {% endif %}
  <p>{{ post.preview.read_more('').length(20).force|e('esc_html') }}</p>
  <a href="{{post.link|e('esc_url')}}" class="uk-button uk-button-default">{{ __('Read more', 'verbose-doodle') }}</a>
</article>